<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.batocerawidget" name="Batocera Widget" version="0.0.7" provider-name="PRAEst76">
    <requires>
        <import addon="xbmc.python" version="3.0.0" />
    </requires>
    
    <!-- Main add-on type must be defined first -->
    <extension point="xbmc.python.script" library="default.py">
        <provides>video</provides>
    </extension>
    
    <!-- Metadata section -->
    <extension point="xbmc.addon.metadata">
        <summary>Fetch favorite games from Batocera</summary>
        <description>Searches through gamelist.xml files in the specified roms directory and displays favorite games with thumbnails and metadata.</description>
        <platform>all</platform>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.jpg</fanart>
        </assets>
    </extension>
    
    <!-- Settings section -->
    <extension point="xbmc.addon.settings">
        <category label="Settings">
            <setting id="rom_directory" type="text" default="/userdata/roms" label="ROM Directory Path" />
        </category>
    </extension>
</addon>