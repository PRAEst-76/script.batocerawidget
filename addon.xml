<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.batocerawidget" name="Batocera Widget" version="0.0.7" provider-name="PRAEst76">
    <requires>
        <import addon="xbmc.python" version="3.0.0" />
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Fetch Batocera favorites and display in a Kodi widget</summary>
        <description>Searches through gamelist.xml files in the roms directory and displays favorite games with their thumbnails and metadata as aselectable video widget.</description>
        <platform>all</platform>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
